<form action="/products/<%=@product["id"]%>" method="post">
  <p>
    <label>Name:</label>
    <input type="text" name="name" value="<%=@product["name"]%>">
  </p>

  <p>
    <label>Price:</label>
    <input type="number" name="price" value="<%=@product["price"]%>">
  </p>

  <p>
    <label>Description:</label>
    <textarea name="description"><%= @product["description"]%></textarea>
  </p>

  <p>
    <label>Category:</label>
    <div>
    <select name="category_id" size=5>
      <option value="none" <% if @product["c_name"] == nil %>selected<% end %>>-none-</option> 
      <% @categories.each do |category| %>
      <option value="<%= category["id"] %>" <% if @product["c_name"] == category["name"] %>selected<% end %>><%= category["name"] %></option>
      <% end %>
    </select>
    </div>
  </p>

  <p>
    <input type="submit" name="" value="Save the product changes.">
  </p>
</form>

